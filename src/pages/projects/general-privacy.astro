---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />

    <main class="p-8">
      <article class="prose dark:prose-invert">
        <p>
          <h1 class="text-4xl font-black">Privacy Policy</h1>
          <p>
            This app doesn't collect any information about the user. There is no
            third-party services in the application.
          </p>
          <h1 class="text-3xl font-black">Contact</h1>
          <p>
            If you have any question contact me at
            <a
              href="mailto:rszalna0@gmail.com"
              class="underline hover:no-underline">rszalna0@gmail.com</a
            >
          </p>
        </p>
      </article>

      <Footer />
    </main>
  </body>
</html>
